<div class="flex-container">
  <div class="signup-content">
    <h2 class="login-title">Forgot your password?</h2>
    <div class="video-background">
      <video autoplay muted loop id="signup-video">
        <source src="<%= asset_path('signup_background.mp4') %>" type="video/mp4">
        お使いのブラウザはビデオをサポートしていません。
      </video>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'login-form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
      </div>

      <div class="actions">
        <%= f.submit "Send", class: 'login-button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
