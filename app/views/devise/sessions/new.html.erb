<div class="flex-container">
  <div class="signup-content">
    <h2 class="login-title">Log in</h2>
    <div class="video-background">
      <video autoplay muted loop id="signup-video">
        <source src="<%= asset_path('signup_background.mp4') %>" type="video/mp4">
        お使いのブラウザはビデオをサポートしていません。
      </video>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: 'checkbox' %>
          <%= f.label :remember_me, class: 'label' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'login-button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
