<div class="flex-container">
  <div class="post-form-content">
    <div class="video-background">
      <video autoplay muted loop id="post-form-video">
        <source src="<%= asset_path('board_index_background.mp4') %>" type="video/mp4">
        お使いのブラウザはビデオをサポートしていません。
      </video>
    </div>

    <h1 class="signup-title">New Post</h1>

    <%= form_with model: @post, local: true, html: { multipart: true } do |form| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> が検出されました:</h2>

          <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :title, class: 'label' %>
        <%= form.text_field :title, class: 'input' %>
      </div>

      <div class="field">
        <%= form.label :content, class: 'label' %>
        <%= form.text_area :content, class: 'input' %>
      </div>

      <!-- <div class="field">
        <%= form.label :image, class: 'label' %>
        <%= form.file_field :image, class: 'input' %>
      </div> -->

      <div class="field">
        <%= form.label :private, class: 'label' %>
        <%= form.check_box :private, class: 'input' %>
      </div>

      <div class="field">
        <%= form.label :anonymous, class: 'label' %>
        <%= form.check_box :anonymous, class: 'input' %>
      </div>

      <!-- <div class="field">
        <%= form.label :tags_id, class: 'label' %>
        <%= form.number_field :tags_id, class: 'input' %>
      </div>-->

      <div class="actions">
        <%= form.submit "POST", class: 'signup-button' %>
      </div>
    <% end %>
  </div>
</div>