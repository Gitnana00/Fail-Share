<div class="video-background">
  <video autoplay muted loop id="posts-background-video">
    <source src="<%= asset_path('board_index_background.mp4') %>" type="video/mp4">
    Your browser does not support HTML5 video.
  </video>
</div>

<h1>Post index</h1>
<%= search_form_for @q do |f| %>
  <div class="search-form">
    <%= f.search_field :title_cont, placeholder: 'タイトル', class: 'search-input' %>
    <%= f.submit "Search", class: 'search-button' %>
  </div>
<% end %>

<div class="posts">
  <%= render partial: "posts/post", collection: @posts %>
</div>
