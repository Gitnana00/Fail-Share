<div class="flex-container">
  <div class="user-profile-content">
    <div class="video-background">
    <video autoplay muted loop id="signup-video">
      <source src="<%= asset_path('signup_background.mp4') %>" type="video/mp4">
      お使いのブラウザはビデオをサポートしていません。
    </video>
  </div>
  <div class="user-profile">
    <div class="user-profile-image">
    <%= image_tag(@user.profile_image) if @user.profile_image.present? %>
    </div>
    <div class="user-info">
      <p class="user-name">名前: <%= @user.name %></p>
      <p class="user-email">メール: <%= @user.email %></p>
    </div>
  </div>
    <div class="calendar-container"> 
    <%= month_calendar do |date| %>
      <% if date == date.beginning_of_month %>
        <tr>
          <% %w(Sun Mon Tue Wed Thu Fri Sat).each do |day| %>
            <th><%= day %></th>
          <% end %>
        </tr>
      <% end %>

      <tr>
        <td><%= date.day %></td>
      </tr>
    <% end %>
  </div>
</div>
</div>

